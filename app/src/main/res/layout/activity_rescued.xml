<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/background"
    >

    <TextView
        android:id="@+id/tv_title_thanks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/sf_b"
        android:text="Terima kasih sudah bantu pendaki ini."
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.Atlas.Headline1"
        android:textColor="@color/text_primary" />

    <TextView
        android:id="@+id/tv_desc_thanks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/sf"
        android:text="Atlas udah coba hubungi kontak darurat pendaki."
        android:textAlignment="center"
        android:textColor="@color/text_secondary"
        android:textSize="16sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_home"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/secondary"
        android:fontFamily="@font/sf"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:text="Ke Halaman Awal"
        android:textColor="@color/text_on_button"
        android:textAppearance="@style/Button_text"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_arrow_forward"
        app:iconGravity="textEnd"
        app:iconTint="@color/text_on_button" />

</LinearLayout> 